<h1>Listing projects</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Client</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @projects.each do |project| %>
  <tr>
    <td><%= project.name %></td>
    <td><%= project.description %></td>
    <td><%= project.client.name %></td>
    <td><%= link_to 'Show', project, :remote => true %></td>
    <td><%= link_to 'Edit', edit_project_path(project), :remote => true %></td>
    <td><%= link_to 'Destroy', project, :confirm => 'Are you sure?', :method => :delete, :remote => true %></td>
  </tr>
<% end %>
</table>

